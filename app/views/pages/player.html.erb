<div class="d-flex align-items-center flex-column">
    <h1>Player profil</h1>
    <h1><%= current_user.email %></h1>
    <h1><%= current_user.id %></h1>
    <div class="row w-100">
        <div class="col-12 col-md-6">
            <h2>Mate ta collection de AirBilles :</h2>
            <% Airbille.all.where(:disponibility => true).each do |ab| %>
                <% if ab.user_id == current_user.id%>
                    <%= link_to airbille_path(ab) do %>
                    <div class="billes" style="border-color: #<%= ab.couleur %>;"></div>
                    <%= ab.name %>
                    <%= ab.user_id %>
                    <% end %>
                <% end %>
            <% end %>
        </div>
        <div class="col-12 col-md-6 d-flex flex-wrap">
            <h2>Tes Airbilles actuellement sur le march√© :</h2>
            <% Airbille.all.where(:disponibility => false).each do |ab| %>
                <% if ab.user_id == current_user.id %>
                    <%= link_to airbille_path(ab) do %>
                    <div class="billes" style="border-color: #<%= ab.couleur %>;"></div>
                    <%= ab.name %>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>